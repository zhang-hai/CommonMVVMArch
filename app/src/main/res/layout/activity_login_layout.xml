<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_login_name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户名："
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/et_login_name"
        app:layout_constraintBottom_toBottomOf="@id/et_login_name"/>

    <EditText
        android:id="@+id/et_login_name"
        android:layout_width="300px"
        android:layout_height="80px"
        app:layout_constraintStart_toEndOf="@id/tv_login_name_title"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/tv_login_password_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户名："
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/et_login_password"
        app:layout_constraintBottom_toBottomOf="@id/et_login_password"/>

    <EditText
        android:id="@+id/et_login_password"
        android:layout_width="300px"
        android:layout_height="80px"
        app:layout_constraintStart_toEndOf="@id/tv_login_password_title"
        app:layout_constraintTop_toBottomOf="@id/et_login_name"/>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登录"
        app:layout_constraintTop_toBottomOf="@id/et_login_password"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_login_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_login"/>
</androidx.constraintlayout.widget.ConstraintLayout>